/*setTimeout and clearTimeout*/
document.write("hello");
let a = setTimeout(() => {
    alert("hii my name is mou mandal");

}, 2000);
let b = prompt("do you want to run the setTimeout?");
if ("n" == b) {
    clearTimeout(a);
}
console.log(a);

/*example*/
const sum = ((a, b, c) => {
    console.warn("yes i am running "+ (a + b + c));
})
setTimeout(sum, 1000, 1, 4, 5);

