let a = document.getElementsByTagName("div")[0];
/*a.innerHTML = a.innerHTML +"<i>hii everyone</i>";*/
let div = document.createElement("div");
div.innerHTML = "<i>hii everyone</i>";
a.appendChild(div);
a.prepend(div);
a.before(div);
a.after(div);
a.replaceWith(div);



